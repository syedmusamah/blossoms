
<h1>Sign In</h1>

<%= form_for @user, :action => :create do |f| %>

<div id ="error_message">
<%= flash[:notice] %>
</div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
 
    <%= f.submit "Submit" %>

<% end %>
